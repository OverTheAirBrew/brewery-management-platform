{
  "name": "brewery-management-platform",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "prune:backend": "turbo prune --scope='backend' --docker",
    "dev": "turbo run start:dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "is-ci || husky install"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.1",
    "eslint-config-custom": "*",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "prettier": "latest",
    "turbo": "^1.9.3",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "npm@9.6.2",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
