{
  "name": "brewery-management-platform",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:local": "turbo run build:local",
    "prune:backend": "turbo prune --scope='@overtheairbrew/backend' --docker",
    "build:all": "turbo run build",
    "dev": "turbo run start:dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "$DOCKER || is-ci || husky install",
    "release": "auto shipit --dry-run",
    "release:ci": "auto shipit -v"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^10.46.0",
    "@auto-it/docker": "^10.46.0",
    "@auto-it/npm": "^10.46.0",
    "@commitlint/config-conventional": "^17.6.1",
    "auto": "^10.46.0",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "prettier": "latest",
    "turbo": "^1.10.7",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.5.1",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": "overtheairbrewco/brewery-management-platform",
  "author": "Nick Sharp <nick@overtheairbrew.com>",
  "auto": {
    "plugins": [
      "npm",
      "conventional-commits",
      "docker",
      "released"
    ]
  }
}
