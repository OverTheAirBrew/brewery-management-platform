{
  "name": "@overtheairbrew/one-wire-sensor",
  "version": "1.0.0",
  "description": "> TODO: description",
  "author": "Nick Sharp <nick.sharp.87@gmail.com>",
  "homepage": "https://github.com/overtheairbrew/homebrew#readme",
  "license": "ISC",
  "private": true,
  "main": "dist/index.js",
  "types": "dist",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/overtheairbrew/homebrew.git"
  },
  "scripts": {
    "prebuild": "rimraf dist coverage src/**/*.{js,map}",
    "build:local": "tsc",
    "build": "tsup",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "start:dev": "tsc -w"
  },
  "bugs": {
    "url": "https://github.com/overtheairbrew/homebrew/issues"
  },
  "peerDependencies": {
    "@nestjs/common": "^10"
  },
  "dependencies": {
    "@overtheairbrew/shared": "workspace:*",
    "fast-glob": "^3.2.11"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "18",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsconfig": "workspace:*",
    "tsup": "^7.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "index.ts",
      "interfaces.ts"
    ]
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "minify": false
  }
}
